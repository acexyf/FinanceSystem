	<script type="text/javascript">
    var genre=$('.genre'),
        genreList=$('.genreList'),
        detail=$('.detail'),
        detailList=$('.detailList')
	$('.default-date-picker').datepicker({
        format: 'yyyy-mm-dd'
    });

    $.ajax({
        url:'/getConsumeModels',
        type:'get',
        dataType:'json',
        success:function(data){
            if(typeof data=='string'){
                data=JSON.parse(data)
            }
            consumeModels=data;
            setGenre(0);
            setDetail(0,0);
            genreList.html('');
            consumeModels.map(function(elem){
                genreList.append('<li data-type="'+elem.type+'"><a href="javascript:;">'+elem.name+'</a></li>')
            });
            detailList.html('');
            consumeModels[0].list.map(function(elem){
                 detailList.append('<li data-type="'+elem.type+'"><a href="javascript:;">'+elem.name+'</a></li>')
            });

            $('li',genreList).on('click',function(){
                var tempIndex=parseInt($(this).data('type'));
                if(tempIndex==genre.data('type')){
                    return;
                }
                setGenre(tempIndex);
                detailList.html('');
                setDetail(tempIndex,0)
                consumeModels[tempIndex].list.map(function(elem){
                     detailList.append('<li data-type="'+elem.type+'"><a href="javascript:;">'+elem.name+'</a></li>')
                });
                $('li',detailList).on('click',function(){
                    var tempIndex1=parseInt($(this).data('type'));
                    setDetail(tempIndex,tempIndex1);
                });
            });
        }
    });

    $('.submit').on('click',function(e){
        e.preventDefault();
        var amount=$('#amount').val();
        if(!amount){
            alert('猪头你忘记写金额了')
        }
        else{
            $.ajax({
                url:'/addConsume',
                type:'post',
                dataType:'json',
                data:{
                    amount:amount,
                    genre:genre.data('type'),
                    detail:detail.data('type'),
                    times:$('.times').val(),
                    explains:$('#explains').val()
                },
                success:function(data){
                    if(typeof data=='string'){
                        data=JSON.parse(data);
                    }
                    if(data.status){
                        alert('保存成功');
                        window.location.href='/home';
                    }
                    else{
                        alert('保存失败');
                    }
                }
            });
        }
    });

    function setGenre(index){
        genre.html(consumeModels[index].name+'<span class="caret"></span>');
        genre.data('type',consumeModels[index].type)
    }
    function setDetail(index,index1){
        detail.html(consumeModels[index].list[index1].name+'<span class="caret"></span>');
        detail.data('type',consumeModels[index].list[index1].type)
    }

	</script>

